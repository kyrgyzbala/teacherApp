<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logoRowChatList"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/def_ava" />

    <TextView
        android:id="@+id/userNameRowChatList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14sp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:layout_toEndOf="@+id/logoRowChatList"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Name" />

    <RelativeLayout
        android:id="@+id/relRowChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userNameRowChatList"
        android:layout_toEndOf="@+id/logoRowChatList">

        <TextView
            android:id="@+id/messageTextViewRowChatList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14sp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="5dp"
            android:textColor="#2F4150"
            android:textSize="14sp"
            tools:text="qqqqqqqqqqqqqqqqqqqqqqqqqqqq ..." />

        <ImageView
            android:id="@+id/dotRowChat"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="42dp"
            android:layout_toEndOf="@+id/messageTextViewRowChatList"
            android:src="@drawable/dots_selectd"
            android:visibility="visible" />

        <TextView
            android:id="@+id/timeTextViewLastMessageRowChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="2dp"
            android:layout_toStartOf="@+id/agoTextView"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            tools:ignore="SmallSp"
            tools:text="2d" />

        <TextView
            android:id="@+id/agoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16sp"
            android:layout_marginEnd="12dp"
            android:text="@string/ago"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            tools:ignore="SmallSp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_below="@+id/logoRowChatList"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="12dp"
        android:layout_toEndOf="@+id/logoRowChatList"
        android:background="#75000000" />


</RelativeLayout>